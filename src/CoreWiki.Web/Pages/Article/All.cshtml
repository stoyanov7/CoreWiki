@page
@model CoreWiki.Web.Pages.Article.AllModel
@{
    ViewData["Title"] = "All";
}

<h2>All Articles</h2>

<ul class="pagination">
    @for (var pageNum = 1; pageNum <= Model.TotalPages; pageNum++)
    {
        <li class="page-item @(pageNum == Model.PageNumber ? "active" : "")">
            @if (pageNum == Model.PageNumber)
            {
                <a class="page-link active" href="#">@pageNum</a>
            }
            else
            {
                <a class="page-link" asp-page="./All" asp-route-pageNumber="@pageNum">@pageNum</a>
            }
        </li>

    }
</ul>

@foreach (var item in Model.Articles)
{
    <div class="card border border-primary mb-3">
        <div class="card-header">
            <h3 class="card-title">
                <a asp-page="./Details" asp-route-topic="@item.Topic">@item.Topic</a>
            </h3>
        </div>
        <div class="card-body">
            <h6 class="card-subtitle mb-2 text-muted">
                <span data-value="@item.Published" class="timeStampValue"> @item.Published</span>
            </h6>
            <a class="card-link" asp-page="./Edit" asp-route-topic="@item.Topic">Edit</a>
            <a class="card-link" asp-page="./Delete" asp-route-topic="@item.Topic">Delete</a>
        </div>
    </div>
}

@section Styles {
    <style>
        .pageNumber {
            margin: 0px 4px;
        }
    </style>
}