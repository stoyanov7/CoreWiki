@page

@using CoreWiki.Models.Identity
@using Microsoft.AspNetCore.Identity

@inject RoleManager<IdentityRole> RoleManager
@inject UserManager<ApplicationUser> UserManager

@model UsersModel

<h2>Current Users:</h2>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Manage Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.UsersList)
        {
            <tr>
                <td> @user.UserName </td>
                @if (Model.RoleNames.Count < 1)
                {
                    <td class="text-center">
                        No roles are currently available. Please add a role.
                    </td>
                }
                else
                {
                    <td>
                        @{
                            var currentUsersRoles = await UserManager.GetRolesAsync(user);
                        }
                        <form method="post">
                            <input type="hidden"
                                   asp-for="@Model.UsernameToAddRoleTo"
                                   value="@user.UserName" />

                            @foreach (var roleName in Model.RoleNames)
                            {
                                var checkboxId = $"checkbox_{user.Id}_{roleName}";

                                <div class="custom-control custom-checkbox mb-2">
                                    <input class="custom-control-input"
                                           type="checkbox"
                                           name="updatedRoles"
                                           value="@roleName"
                                           id="@checkboxId"
                                           checked="@currentUsersRoles.Contains(roleName)">

                                    <label class="custom-control-label"
                                           for="@checkboxId">@roleName</label>
                                </div>
                            }
                            <input type="submit"
                                   asp-page-handler="UpdateUserRoles"
                                   class="btn btn-sm btn-success"
                                   value="Update Roles" />
                        </form>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>